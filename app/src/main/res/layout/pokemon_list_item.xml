<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/pokemon_blue">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <ImageView
                android:id="@+id/pokemon_list_pokemon1"
                android:layout_width="@dimen/pokemon_icon_width"
                android:layout_height="@dimen/pokemon_icon_height"
                android:layout_weight="1"
                android:contentDescription="@string/list_item_1"
                app:srcCompat="@drawable/p001_no_pokemon" />

            <ImageView
                android:id="@+id/pokemon_list_pokemon2"
                android:layout_width="@dimen/pokemon_icon_width"
                android:layout_height="@dimen/pokemon_icon_height"
                android:layout_weight="1"
                android:contentDescription="@string/list_item_2"
                app:srcCompat="@drawable/p002_no_pokemon" />

            <ImageView
                android:id="@+id/pokemon_list_pokemon3"
                android:layout_width="@dimen/pokemon_icon_width"
                android:layout_height="@dimen/pokemon_icon_height"
                android:layout_weight="1"
                android:contentDescription="@string/list_item_3"
                app:srcCompat="@drawable/p003_no_pokemon" />

            <ImageView
                android:id="@+id/pokemon_list_pokemon4"
                android:layout_width="@dimen/pokemon_icon_width"
                android:layout_height="@dimen/pokemon_icon_height"
                android:layout_weight="1"
                android:contentDescription="@string/list_item_4"
                app:srcCompat="@drawable/p004_no_pokemon" />

            <ImageView
                android:id="@+id/pokemon_list_pokemon5"
                android:layout_width="@dimen/pokemon_icon_width"
                android:layout_height="@dimen/pokemon_icon_height"
                android:layout_weight="1"
                android:contentDescription="@string/list_item_5"
                app:srcCompat="@drawable/p005_no_pokemon" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/pokemon_list_pokemon1_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:fontFamily="sans-serif-black"
                android:text="@string/unknown_pokemon"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/pokemon_list_pokemon2_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:fontFamily="sans-serif-black"
                android:text="@string/unknown_pokemon"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/pokemon_list_pokemon3_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:fontFamily="sans-serif-black"
                android:text="@string/unknown_pokemon"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/pokemon_list_pokemon4_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:fontFamily="sans-serif-black"
                android:text="@string/unknown_pokemon"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/pokemon_list_pokemon5_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:fontFamily="sans-serif-black"
                android:text="@string/unknown_pokemon"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textStyle="bold" />
        </TableRow>

    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>