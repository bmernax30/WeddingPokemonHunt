<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResumeUserActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/pokemon_blue"
        android:orientation="vertical">

        <TextView
            android:id="@+id/resume_user_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="false"
            android:layout_centerVertical="false"
            android:background="@color/pokemon_dark_blue"
            android:gravity="center"
            android:text="@string/resume_user_title"
            android:textAppearance="@style/TextAppearance.AppCompat.Display2"
            android:textColor="@color/pokemon_yellow"
            android:textStyle="bold" />

        <ListView
            android:id="@+id/resume_user_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>